terraform {
  required_version = ">= 1.3.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">= 5.0"
    }
  }
}

provider "aws" {
  region = var.region
  # The GitHub Actions workflow will provide credentials via environment variables
  # No need to specify credentials here
}
